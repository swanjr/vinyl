<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Album Title</th>
      <th>Type of Album</th>
      <th>Artist</th>
      <th>Releasd</th>
      <th>Sides</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.album.title %></td>
        <td><%= record.album.album_type %></td>
        <td><%= record.album.artist %></td>
        <td><%= record.album.released %></td>
        <td><%= record.sides %></td>
        <td><%= record.condition %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

